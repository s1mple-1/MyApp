<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/actor_image"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/robert_downey_jr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/actor_name_film_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/robert_downey_jr"
        android:textAppearance="@style/names"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/actor_image"
        app:layout_constraintStart_toStartOf="@id/actor_image"
        app:layout_constraintTop_toBottomOf="@id/actor_image"
        />


</androidx.constraintlayout.widget.ConstraintLayout>